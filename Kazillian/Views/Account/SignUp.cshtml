
@{
    ViewBag.Title = "SignUp";
}
 
<div class="container page-container" ng-controller="userTypePageController">
    <div class="row">
        <div class="col-md-12">
            <hgroup class="text-center">
                <h1>Let's hit the ground running!</h1>
                <h1>How would you like to get started?.</h1>
            </hgroup>
        </div>

        <div class="hidden-xs">&nbsp;</div>
        <div class="visible-xs">&nbsp;</div>

        <div class="col-md-12 text-center">
            <div class="col-md-5">
                <div class="text-muted">
                    <div><img src="~/Content/img/peoplesearch-icon.png" alt="Alternate Text" /></div>
                    <h3>I want to hire a Sales Person/Team</h3>
                </div>
                <p class="heading-subtitle text-center">
                   Let's find expert salespeople to jumpstart your business!
                </p>
                <a class="btn btn-default btn-lg" href="/signup/employer">Hire</a>
            </div>

            <div class="col-md-2 vertical-line-heading">OR</div>

            <div class="col-md-5">
                <div class="text-muted">
                    <div><img src="~/Content/img/salesguy-icon.png" alt="Alternate Text" /></div>
                    <h3>I'm looking for work as a Salesperson</h3>
                </div>
                <p class="heading-subtitle text-center">
                   Find and collaborate on projects to help owners boost sales and leads.
                </p>
                <a class="btn btn-default btn-hollow btn-lg" href="/signup/salesperson">Work</a>
            </div>
        </div>
    </div>
</div>